{
  "name": "compliance-engine",
  "image": "mcr.microsoft.com/devcontainers/python:3.12",
  "features": {
    "ghcr.io/devcontainers/features/aws-cli:1": { "version": "2" }
  },
  "postCreateCommand": "pip install -r api/requirements.txt && curl -L -o /usr/local/bin/opa https://openpolicyagent.org/downloads/latest/opa_linux_amd64 && chmod +x /usr/local/bin/opa",
  "forwardPorts": [8000],
  "customizations": {
    "vscode": {
      "settings": { "python.defaultInterpreterPath": "/usr/local/bin/python" },
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker",
        "redhat.vscode-yaml",
        "github.vscode-github-actions"
      ]
    }
  },
  "remoteUser": "vscode"
}